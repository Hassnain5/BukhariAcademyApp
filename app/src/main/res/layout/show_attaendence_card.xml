<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginHorizontal="20dp"
        >
        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Teacher Name"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_teacher_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Present"
            android:textSize="20dp"
            android:layout_below="@+id/tv_teacher_name"
            />
        <TextView
            android:id="@+id/tv_teacher_present_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="4"
            android:textSize="20dp"
android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_teacher_name"
            />
        <TextView
            android:id="@+id/tv_teacher_absent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Absent"
            android:textSize="20dp"
            android:layout_below="@+id/tv_teacher_present"
            />
        <TextView
            android:id="@+id/tv_teacher_absent_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_teacher_present_days"
            android:layout_centerVertical="true"
            />
        <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Total Days"
        android:textSize="20dp"
        android:layout_below="@+id/tv_teacher_absent"
        />
        <TextView
            android:id="@+id/tv_total_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_teacher_absent_days"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>